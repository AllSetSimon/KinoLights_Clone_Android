<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ReStyleDrawer"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/naviHeaderFrame"
        >
        <include
            android:id="@+id/naviHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_main_navigation_header"
            android:visibility="gone"
            />
        <include
            android:id="@+id/naviHeaderGuest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_main_navigation_header_guest"
            />
    </FrameLayout>
    <ListView
        android:id="@+id/naviMenu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:numColumns="2"
        android:id="@+id/naviMenu2"
        android:gravity="center"
        android:background="#8C8C8C"
        android:verticalSpacing="0.5dp"
        android:horizontalSpacing="0.5dp"
        android:paddingVertical="0.5dp"
        />
    <ListView
        android:id="@+id/naviMenu3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
</LinearLayout>
