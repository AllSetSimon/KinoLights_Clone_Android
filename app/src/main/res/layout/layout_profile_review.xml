<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileReViewLayout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_margin="20dp"
        >
        <com.beardedhen.androidbootstrap.BootstrapButtonGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileReiewBtn"
            app:bootstrapSize="md"
            app:roundedCorners="true"
            app:bootstrapBrand="secondary"
            app:showOutline="true"
            >
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/profileReviewWriteBtn"
                app:bootstrapText="님이 남긴"
                />
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/profileReviewFavoriteBtn"
                app:bootstrapText="님이 좋아요 한"
                />
        </com.beardedhen.androidbootstrap.BootstrapButtonGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 0 건"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <com.beardedhen.androidbootstrap.BootstrapDropDown
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:layout_weight="1"
            android:layout_alignParentRight="true"

            app:bootstrapBrand="primary"
            app:bootstrapSize="sm"
            app:bootstrapText="정렬 최근에 본 순 기준"
            app:roundedCorners="true"
            app:dropdownResource="@array/archiveFilterYear"
            app:bootstrapExpandDirection="down"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="님이 작성한 리뷰가 없어요."
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/profileReviewMessage"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/writeReviewListView"
            android:scrollbars="none"
            android:dividerHeight="20dp"
            android:divider="#00000000"
            android:visibility="gone"
            >
        </ListView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/favoriteReviewListView"
            android:visibility="gone"
            android:scrollbars="none"
            android:dividerHeight="20dp"
            android:divider="#00000000"
            >
        </ListView>
    </FrameLayout>
</LinearLayout>