<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scatter="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profileCountry"
            android:textStyle="bold"

        />
        <FrameLayout
            android:layout_marginVertical="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profileCountryDefaultText"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/countryListView"
                android:visibility="gone"
                >
            </ListView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kinoLightChart"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />
        <com.intrusoft.scatter.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="130dp"
            android:layout_height="130dp"
            scatter:aboutChart="SkuChart"
            scatter:centerColor="#000000"
            scatter:chartColor="@color/colorPrimary"
            scatter:equalPartition="false"
             />

    </LinearLayout>

</LinearLayout>