<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/profilebackground"
    android:gravity="center"
    >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="1"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/gueststring"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NaviHeaderLogin"
            android:id="@+id/naviHeaderLogin"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"

            app:buttonMode="regular"
            app:bootstrapSize="md"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:showOutline="true"

            />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NaviHeaderSignUp"
            android:id="@+id/naviHeaderSignUP"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="5dp"

            app:buttonMode="regular"
            app:bootstrapSize="md"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:showOutline="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/titleimage"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
    </GridLayout>


</LinearLayout>