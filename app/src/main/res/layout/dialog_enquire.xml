<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/colorSearch"
        >
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:text="X"
            android:background="#00000000"
            android:layout_marginHorizontal="5dp"
            android:layout_gravity="center"
            android:id="@+id/dialogEnquireExitButton"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/titleimage"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="문의 및 제안"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/design_default_color_primary_dark"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:layout_marginRight="20dp"
                />
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSearch"
                android:id="@+id/dialogEnquireName"
                android:hint="제목을 입력해주세요."
                app:bootstrapBrand="primary"
                app:roundedCorners="true"
                app:bootstrapSize="md"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분류"
                android:layout_marginRight="20dp"
                />
            <com.beardedhen.androidbootstrap.BootstrapDropDown
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00000000"

                app:bootstrapBrand="primary"
                app:bootstrapSize="sm"
                app:bootstrapText="DB 제보 및 오류 수정"
                app:roundedCorners="true"
                app:dropdownResource="@array/enquireGruop"
                app:bootstrapExpandDirection="down"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:layout_marginRight="20dp"
                android:gravity="top"
                />
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSearch"
                android:hint="내용을 입력해주세요."
                app:bootstrapBrand="primary"
                app:roundedCorners="true"
                app:bootstrapSize="md"
                android:singleLine="false"
                android:height="150dp"
                android:gravity="top"
                />
        </LinearLayout>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보내기"
            android:layout_gravity="center"
            app:buttonMode="regular"
            app:bootstrapSize="md"
            app:bootstrapBrand="secondary"
            app:roundedCorners="true"

            />
    </LinearLayout>


</LinearLayout>