<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bootstrap_brand_info"
    android:id="@+id/profileWishLayout"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/archiveDropDownLayout"
        android:layout_gravity="right"
        android:layout_marginVertical="20dp"
        android:layout_marginRight="10dp"
        >

        <com.beardedhen.androidbootstrap.BootstrapDropDown
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:layout_weight="1"
            app:bootstrapBrand="primary"
            app:bootstrapSize="sm"
            app:bootstrapText="연대별"
            app:roundedCorners="true"
            app:dropdownResource="@array/archiveFilterYear"
            app:bootstrapExpandDirection="down"
            />
        <com.beardedhen.androidbootstrap.BootstrapDropDown
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:text="장르별"
            app:bootstrapBrand="primary"
            app:bootstrapSize="sm"
            app:dropdownResource="@array/archiveFilterYear"
            app:bootstrapExpandDirection="down"
            app:roundedCorners="true"
            />
        <com.beardedhen.androidbootstrap.BootstrapDropDown
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:layout_weight="1"
            app:bootstrapBrand="primary"
            app:bootstrapSize="sm"
            app:bootstrapText="정렬"
            app:roundedCorners="true"
            app:dropdownResource="@array/archiveFilterYear"
            app:bootstrapExpandDirection="down"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님이 보고싶은 영화 0"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위시리스트추가일순 기준"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/profileWishArray"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="님이 보고싶은 영화가 없어요."
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/profileWishMessage"
            />
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profileWishGridView"
            android:scrollbars="none"
            android:numColumns="4"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            >
        </GridView>
    </FrameLayout>
</LinearLayout>