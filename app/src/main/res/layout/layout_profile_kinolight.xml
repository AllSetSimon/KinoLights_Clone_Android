<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileKinoLayout"
    >
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/archiveDropDownLayout"
    android:layout_gravity="right"
    android:layout_marginVertical="20dp"
    android:layout_marginRight="10dp"
    >

    <com.beardedhen.androidbootstrap.BootstrapDropDown
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"
        app:bootstrapBrand="primary"
        app:bootstrapSize="sm"
        app:bootstrapText="평가별"
        app:roundedCorners="true"
        app:dropdownResource="@array/archiveFilterYear"
        app:bootstrapExpandDirection="down"
        />
    <com.beardedhen.androidbootstrap.BootstrapDropDown
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"
        app:bootstrapBrand="primary"
        app:bootstrapSize="sm"
        app:bootstrapText="연대별"
        app:roundedCorners="true"
        app:dropdownResource="@array/archiveFilterYear"
        app:bootstrapExpandDirection="down"
        />
    <com.beardedhen.androidbootstrap.BootstrapDropDown
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#00000000"
        android:text="장르별"
        app:bootstrapBrand="primary"
        app:bootstrapSize="sm"
        app:dropdownResource="@array/archiveFilterYear"
        app:bootstrapExpandDirection="down"
        app:roundedCorners="true"
        />
    <com.beardedhen.androidbootstrap.BootstrapDropDown
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"
        app:bootstrapBrand="primary"
        app:bootstrapSize="sm"
        app:bootstrapText="정렬"
        app:roundedCorners="true"
        app:dropdownResource="@array/archiveFilterYear"
        app:bootstrapExpandDirection="down"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키노라이트"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/profileKinoArray"
            android:text="최근평가순"
            android:paddingRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기준"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/profileKinoArray"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 편의 영화가 검색되었습니다."
            />

    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:id="@+id/profileKinoGridView"
        android:gravity="center"
        >
    </GridView>
</LinearLayout>